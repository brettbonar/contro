{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "semicolon": ["never"],
    "quotemark": [true, "single", "avoid-escape"],
    "arrow-parens": ["ban-single-arg-parens"],
    "curly": [true, "ignore-same-line"],
    "object-literal-sort-keys": false,
    "max-classes-per-file": false,
    "no-empty-interface": false,
    "interface-name": false
  },
  "include": ["./dist/**/*.ts"]
}
